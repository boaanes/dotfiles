#!/bin/bash

NAME="Razer Razer DeathAdder"

[[ $(xinput list) == *"$NAME"* ]] &&
    xinput --set-prop "$NAME" "libinput Natural Scrolling Enabled" 0 &&
    xinput --set-prop "$NAME" "Coordinate Transformation Matrix" 0.125 0 0 0 0.125 0 0 0 1.0 &&
    xinput --set-prop "$NAME" "libinput Accel Speed" 0.5
