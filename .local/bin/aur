#!/bin/bash

COMMAND="$1"
PACKAGE="$2"

# preconditions
[[ -z "$COMMAND" ]] && echo "Please specify command" && exit
[[ ! "$COMMAND" =~ ^[IiRrUu]$ ]] && echo "Unkown command: '$COMMAND'" && exit
[[ -z "$PACKAGE" ]] && [ "$COMMAND" != "u" ] && [ "$COMMAND" != "U" ] && echo "Please specify package name" && exit
[[ ! -d "${HOME}/aur/" ]] && mkdir "${HOME}/aur/"

installpkg() {
    if [[ -d "${HOME}/aur/$PACKAGE" ]]; then
        while true; do
            read -p "Directory exists - re-clone? [y/N]: " yn
            case $yn in
                [Yy]* ) echo "Installing: $'{PACKAGE}'..." && cd "${HOME}/aur/" && rm -rf "${HOME}/aur/$PACKAGE" && git clone "https://aur.archlinux.org/$PACKAGE.git" && cd "$PACKAGE" && makepkg -sci; break;;
                * ) exit;;
            esac
        done
    else
        cd "${HOME}/aur/" && git clone "https://aur.archlinux.org/$PACKAGE.git" && cd "$PACKAGE" && makepkg -sci
    fi
}

remove() {
    echo "Removing: '${PACKAGE}'..."
    if [[ -d "${HOME}/aur/$PACKAGE" ]]; then
        rm -rf "${HOME}/aur/$PACKAGE" && sudo pacman -Rs "$PACKAGE"
    else
        echo "Package is not present in aur dir"
        echo "Trying pacman..."
        sudo pacman -Rs "$PACKAGE"
    fi
}

update() {
    echo "Updating packages..."
    cd "$HOME/aur/"
    for d in */ ; do
        echo ""
        echo "Updating: ${d::-1}..."
        cd "$HOME/aur/$d"
        git remote update
        UPSTREAM=${1:-'@{U}'}
        LOCAL=$(git rev-parse @)
        REMOTE=$(git rev-parse "$UPSTREAM")
        BASE=$(git merge-base @ "$UPSTREAM")
        
        if [ $LOCAL = $REMOTE ]; then
            echo "Up to date"
        elif [ $LOCAL = $BASE ]; then
            git pull
            makepkg -sci
        elif [ $REMOTE = $BASE ]; then
            echo "Up to date"
            git checkout .
        else
            echo "Diverged"
            git pull
        fi
    done
}

case $COMMAND in
    [Ii]* ) installpkg;;
    [Rr]* ) remove;;
    [Uu]* ) update;;
    * ) echo "Unkown command: '$COMMAND'" && exit;;
esac
